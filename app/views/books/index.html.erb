<div class="col-lg-8">

  <h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %></dr>

    <%= f.submit 'Create Book' %>
  <% end %>


  <h2>Books</h2>

  <table class="table table-striped">
<% @books.each do |book| %>
  <div>
  <%= link_to book_path(book.id) do %>
  <%= image_tag book.user.get_profile_image %>
  <%= book.title %>
  <%= book.body %>
  <% end %>
  </table>
  </div>
<% end %>