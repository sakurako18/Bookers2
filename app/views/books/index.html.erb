<h1>User info</h1>


<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>

<% @books.each do |book| %>
  <div>
  <%= link_to book_path(book.id) do %>
  <%= image_tag book.user.get_profile_image %>
  <%= book.title %>
  <%= book.body %>
  <% end %>
  </div>
<% end %>