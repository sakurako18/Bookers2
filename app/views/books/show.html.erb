  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render '/users/userlist', book: @book_new, user: @user %>
      </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
            <table class="table">
            <tbody>
              <tr>
                <td><%= link_to user_path(@book.user.id) do %>
                    <%= image_tag @book.user.get_profile_image, size: '100x100' %>
                    <%= current_user.name %>
                    <% end %>
                </td>
                <td>
                  <%= @book.title %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                  <% if current_user == @book.user  %>
                <td>
                    <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success"%>
                </td>
                <td>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger"%>
                </td>
                  <% end %>
              </tr>
            </tbody>
            </table>
    </div>
  </div>
</div>