<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: current_user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:" ", class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, placeholder: " ", accept: "image/*" %><br>
      </div>
      <div class="form-group">
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_field :Introduction, autofocus: true, id:"inputIntroduction", placeholder:" ", class:"form-control" %><br>
      </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>