  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'userlist', book: @book_new, user: @user %>
      </div>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
            <table class="table">
              <% @books.each do |book| %>
            <tbody>
              <tr>
                <td><%= link_to user_path do %>
                    <%= image_tag @user.get_profile_image, size: '100x100' %>
                    <%= @user.name %>
                    <% end %>
                </td>
                <td>
                  <%= book.title %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
              <% end %>
            </tbody>
            </table>
    </div>
  </div>
</div>